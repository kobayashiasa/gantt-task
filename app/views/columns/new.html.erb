<div class="listnewPage">
  <div class="container">
    <%= form_with model: @column, url: columns_path, class: "new_list", local: true do |f| %>
      <% if @column.errors.any? %>
        <p class="text-danger">タイトルは1～100文字以内で入力してください</p>
      <% end %>
      <%= f.label :カラム名を記載して作成を押してください %>
      <%= f.text_field :column_title, autofocus: true, class: "form-control listName", placeholder: "カラム名" %>
      <div class="text-center"><%= f.submit "作成", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>