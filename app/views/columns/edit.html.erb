<div class="listeditPage">
  <div class="container">
    <%= form_with model: @column, url: { action: :update }, html: { class: 'listForm' }, local: true do |f| %>
      <% if @column.errors.any? %>
        <p class="text-danger">カラム名は1～100文字以内で入力してください</p>
      <% end %>
      <%= f.label :カラム名 %>
      <%= f.text_field :column_title, class: "form-control listName", placeholder: "カラム名" %>
      <div class="text-center"><%= f.submit "編集する", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>