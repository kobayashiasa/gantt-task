<div class="cardnewPgae">
  <div class='container'>
    <%= form_with model: @task, url: { action: :create }, html: { class: 'cardnewForm' }, local: true do |f| %>
      <%= f.hidden_field :column_id, value: @column.id %>
      <% if @task.errors.any? %>
        <p class="text-danger">タスク名は1～100文字以内で入力してください</p>
      <% end %>
      <div class="cardnewForm_title">
        <%= f.label :タスク名 %>
        <%= f.text_field :task_title, autofocus: true, class: "form-control", placeholder: "タスク名" %>
      </div>
      <div class="cardnewForm_memo">
        <%= f.label :タスクの詳細 %>
        <%= f.text_area :task_info, autofocus: true, class: "form-control", placeholder: "詳細" %>
      <div class="text-center"><%= f.submit "作成する", class: "submitBtn" %></div>
      </div>
    <% end %>
  </div>
</div>